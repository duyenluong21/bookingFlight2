<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/activityRoot" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#A1DCDCDC" tools:context=".activity.chatActivity">
    <ImageView
        android:id="@+id/backButtonMess"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#4296D8"
        android:padding="12dp"
        android:src="@drawable/ic_backbutton"/>
    <TextView
        android:id="@+id/tvNamePassenger"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="50dp"
        android:text="Chọn nhân viên tư vấn"
        android:background="#4296D8"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/chatBot"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#4296D8"
        android:padding="12dp"
        android:src="@drawable/robot_2_24px"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNamePassenger"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />
</RelativeLayout>